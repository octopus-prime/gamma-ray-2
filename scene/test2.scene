var red = <1,0,0>
var blue = <0,0,1>

var sphere1 = Sphere {
}
var sphere2 = Sphere {
	center = <0.3,0.3,-0.5>
}
var csg = sphere1 - sphere2

var plane = Plane {
	distance = -1
} 

var texture = Texture { 
	diffuse = 0.3 * white 
	specular = 0.5 * white 
	shininess = 32
}

var scene = Scene
{
	camera = Camera {
		origin = -4 * z
		direction = z
	}
	
	lights = [
		Light {
			origin = <+5,+5,-5> 
			color = 1.8 * red
		}
		
		Light {
			origin = <-5,+5,-5> 
			color = 1.2 * blue
		}
	]
	
	objects = [
		Object { 
			surface = csg
			texture = texture
		}
		
		Object { 
			surface = plane
			texture = texture
		}
	]
}

scene
